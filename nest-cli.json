{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api-gateway/tsconfig.app.json",
    "watchAssets": true,
    "assets": ["libs/common/src/**/*"]
  },
  "monorepo": true,
  "root": "apps/api-gateway",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "wayfarer-auth": {
      "type": "application",
      "root": "apps/wayfarer-auth",
      "entryFile": "main",
      "sourceRoot": "apps/wayfarer-auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/wayfarer-auth/tsconfig.app.json"
      }
    },
    "wayfarer-catalog": {
      "type": "application",
      "root": "apps/wayfarer-catalog",
      "entryFile": "main",
      "sourceRoot": "apps/wayfarer-catalog/src",
      "compilerOptions": {
        "tsConfigPath": "apps/wayfarer-catalog/tsconfig.app.json"
      }
    },
    "wayfarer-cart": {
      "type": "application",
      "root": "apps/wayfarer-cart",
      "entryFile": "main",
      "sourceRoot": "apps/wayfarer-cart/src",
      "compilerOptions": {
        "tsConfigPath": "apps/wayfarer-cart/tsconfig.app.json"
      }
    }
  }
}